  "type": "object",
  "properties": {
    "articleId": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "shortTitle": {
      "type": "string"
    },
    "noOfPages": {
      "type": "integer"
    },
    "authorName": {
      "type": "string"
    },
    "authorEmailAddress": {
      "type": "string"
    },
